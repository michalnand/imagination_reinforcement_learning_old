set   autoscale                        # scale axes automatically
unset log                              # remove any log-scaling
unset label                            # remove any previous labels
set xtic auto                         	# set xtics automatically
set ytic auto                         # set ytics automatically
set ztic auto


set grid ytics lt 0.1 lw 0.1 lc rgb "#bbbbbb"
set grid xtics lt 0.1 lw 0.1 lc rgb "#bbbbbb"

#set terminal png size 2048,1356 enhanced font "Helvetica,20"
set terminal png size 1024,768 

set key right bottom

# set style fill solid 1.0

set xlabel "iterations"
set ylabel "total score"
set output 'training_score_total.png'

set style fill transparent solid 0.3 noborder


plot 'ddpg_result_stats.log' using 1:4:5 notitle  with filledcurves lc 'light-blue' lw 3, \
     'ddpg_imagination_entropy_result_stats.log' using 1:4:5 notitle  with filledcurves lc 'light-red' lw 3, \
     'ddpg_result_stats.log' using 1:3 title 'DDPG'  with lines lc 'blue' lw 3, \
     'ddpg_imagination_entropy_result_stats.log' using 1:3 title 'DDPG imagination entropy'  with lines lc 'red' lw 3



set xlabel "iterations" 
set ylabel "score per iteration"
set output 'training_score_per_iterations.png'

plot 'ddpg_result_stats.log' using 1:7:8 notitle  with filledcurves lc 'light-blue' lw 3, \
     'ddpg_imagination_entropy_result_stats.log' using 1:7:8 notitle  with filledcurves lc 'light-red' lw 3, \
     'ddpg_result_stats.log' using 1:6 title 'DDPG'  with lines lc 'blue' lw 3, \
     'ddpg_imagination_entropy_result_stats.log' using 1:6 title 'DDPG imagination entropy'  with lines lc 'red' lw 3



set xlabel "episodes" 
set ylabel "score per episode"
set output 'training_score_per_episode.png'

plot 'ddpg_result_stats.log' using 2:10:11 notitle  with filledcurves lc 'light-blue' lw 3, \
     'ddpg_imagination_entropy_result_stats.log' using 2:10:11 notitle  with filledcurves lc 'light-red' lw 3, \
     'ddpg_result_stats.log' using 2:9 title 'DDPG'  with lines lc 'blue' lw 3, \
     'ddpg_imagination_entropy_result_stats.log' using 2:9 title 'DDPG imagination entropy'  with lines lc 'red' lw 3
